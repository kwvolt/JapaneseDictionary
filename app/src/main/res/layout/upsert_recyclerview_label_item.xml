<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upsert_label_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">

    <View
        android:id="@+id/upsert_label_divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/divider_horizontal"
        tools:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/upsert_Label"
            style="@style/TextAppearance.AppCompat.Headline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text=""
            tools:text="Temp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/upsert_Label_delete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:contentDescription="@string/deleteButtonDescription"
            android:visibility="gone"
            app:icon="@drawable/delete_item"
            app:iconGravity="textTop"
            app:iconPadding="0dp"
            app:iconTint="?attr/colorOnSurface"
            app:iconTintMode="src_atop"
            tools:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/upsert_label_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:text="subtext"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/upsert_label_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorError"
        android:visibility="gone"
        tools:text="Label is required"
        tools:visibility="visible" />
</LinearLayout>