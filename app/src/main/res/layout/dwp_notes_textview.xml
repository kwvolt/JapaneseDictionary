<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/dwp_noteText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bottom_only_border"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:textSize="16sp"
        tools:text="1. random notes"></TextView>

        <ImageView
            android:id="@+id/overflow_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/overflow"
            android:contentDescription="@string/dwp_overflow_icon_content_description"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bottom_only_border"/>
    </LinearLayout>