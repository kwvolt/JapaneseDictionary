<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Main Class Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/main_class_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:hint="@string/main_class"
        app:errorEnabled="false"
        app:layout_constraintEnd_toStartOf="@+id/sub_class_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="488dp"  >

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/upsert_main_class_drop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="yes"
            android:inputType="text"
            tools:text="woefkpowekfpow" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Sub Class Field -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/sub_class_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:hint="@string/sub_class"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_class_input_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="488dp"  >

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/upsert_sub_class_drop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:importantForAccessibility="yes"
            android:inputType="text"
            tools:text="woefkpowekfpow" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Shared Error Message -->
    <TextView
        android:id="@+id/upsert_word_class_error"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="?attr/colorError"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_class_input_layout"
        tools:text="Please select both class types."
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>