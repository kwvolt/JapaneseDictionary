<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Header Style from Material Design Typography -->
    <style name="TextAppearance.AppCompat.Headline1">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Sub-header Style from Material Design Typography -->
    <style name="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>


    <style name="Custom.Toolbar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="CustomPopupMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:background">@null</item>
        <item name="popupMenuBackground">@drawable/toolbar_overflow_popup_menu</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>